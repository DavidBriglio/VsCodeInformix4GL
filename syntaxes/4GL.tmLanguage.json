{
  "$schema":
    "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Informix 4GL",
  "patterns": [
    {
      "begin": "\\{",
      "end": "\\}",
      "name": "comment.block.4GL",
      "patterns": [
        {
          "match": "."
        }
      ]
    },
    {
      "comment": "Comentario iniciando con #",
      "match": "#.*$",
      "name": "comment.line.number-sign.4GL"
    },
    {
      "comment": "Comentario iniciando con --",
      "match": "--.*$",
      "name": "comment.line.4GL"
    },
    {
      "comment": "Single quoted string",
      "match": "('(?:\\\\'|.)*?')",
      "name": "string.single.4GL"
    },
    {
      "comment": "Double quoted string",
      "match": "(\\\"(?:\\\\\"|.)*?\\\")",
      "name": "string.double.4GL"
    },
    {
      "comment": "Operadores",
      "match":
        "(?i)(=|!=|\\+|-|/|<|>|,|(\\s(or|is|mod|not)(?=(\\s|$))))",
      "name": "keyword.operator.4GL"
    },
    {
      "comment": "Constantes del Lenguaje",
      "match": "(?i)(dirty read|null|true|false|notfound)",
      "name": "constant.language.4GL"
    },
    {
      "comment": "Constantes Numericas",
      "match": "(?<!\\w)((0(x|X)[0-9a-fA-F]+)|([0-9]+(\\.[0-9]+)?))",
      "name": "constant.numeric.4GL"
    },
    {
      "comment": "Variables del Lenguaje",
      "match": "(?i)(isolation|today|\\sstatus|pageno)",
      "name": "variable.language.4GL"
    },
    {
      "comment": "Controles",
      "match": "\\b(?i)(DEFER|QUIT|INTERRUPT|HIDE|OPTION|OPTIONS|ALL|NEXT|SHOW|MESSAGE|LINE|(\\s|^)case(\\s*|$)|continue (.*)|when |otherwise|end case|while |end while|(\\s|^)for(\\s|$)|foreach | into |end for(each)?|if|(\\s+|^)then(\\s+|$)|(\\s+|^)else(\\s+|$)|end if|return(\\s+|$)|exit (.*)|END|INPUT)\\b",
      "name": "keyword.control.4GL"
    },
    {
      "comment": "Funciones del Sistema",
      "match": "\\b(ARG_VAL|ARR_COUNT|ARR_CURR|CURSOR_NAME|DOWNSHIFT|ERR_GET|ERR_PRINT|ERR_QUIT|ERRORLOG|FGL_DRAWBOX|FGL_DYNARR_EXTENTSIZE|FGL_GETENV|FGL_GETKEY|FGL_ISDYNARR_ALLOCATED|FGL_KEYVAL|FGL_LASTKEY|FGL_SCR_SIZE|FGL_SETCURRLINE|LENGTH|NUM_ARGS|ORD|SCR_LINE|SET_COUNT|SHOWHELP|STARTLOG|UPSHIFT|MDY|LOAD|UNLOAD|GET_FLDBUF)\\b",
      "name":"keyword.other"
    },
    {
      "comment": "Palabras Clave",
      "match": "(?i)( between |call(?=\\s+|$)| clipped|(\\s|^)close\\s+(form|window)*|(\\s|^)create\\s+(temp\\s+)?(table|index)(?=\\s+|$)|database |\\sreturning |declare |delete(?=\\s|$)|display\\s+|((\\s|^)drop\\s+(table|index)(\\s|$))|((\\s|^)fetch((\\s+|$)|(\\s+(first|last)\\s+)))|(\\s+|^)free\\s+|group by\\s|(\\s+|^)(desc|asc)(\\s+|$)|(\\s|^)insert\\s+into(\\s+|$)|((scroll)* cursor(?=\\s)(\\swith hold)*)|((top|right|bottom|left)\\s+margin)|page length|(\\s|^)open\\s+(form|window)*|(\\s|^)prepare |(^|\\s)prompt\\s|(^|\\s)input by name(\\s|$)|((start|finish)\\s+report)| spaces|(\\s|^)update(\\s+|$)|(\\s|^)output(?=\\s|$)|(?<=\\s)to(?=\\s|$)|order by|format( |$)|(first\\s+)*page header|before group of|on (every|last) row|after group of| using |begin\\s+work|commit\\s+work|rollback\\s+work|(\\s+|^)values(\\s+|$)|((\\s|^)whenever\\s+(any\\s+)?error\\s+(continue|stop)(\\s|$))|(\\s|^)run\\s+|end input)",
      "name": "keyword.other.4GL"
    },
    {
      "comment": "Otras Palabras Clave",
      "match": "\\b(?i)(attribute|clear|form|column|columns|defaults|menu|key|main|set|lock|mode|wait|initialize|COMMAND|WITH|NO|LOG|ON|FUNCTION|REPORT|INFIELD|FIELD)\\b",
      "name": "keyword.other.4GL"
    },
    {
      "comment": "SQL",
      "match": "\\b(?i)(SELECT|FROM|WHERE|AND|ALTER|ASC|ASCENDING|COUNT|DROP|DESC|DESCENDING|ORDER|UPDATE|UNION|UNIQUE|OUTER|DELETE|MAX|MATCHES|EXISTS|GROUP|HAVING|INSERT|INTO|VALUES|CREATE|VALUE|IN|BY|SQLAWARN|SQLERRM|SQLERROR|SQLERRP|SQLSTATE|SQLWARNING)\\b",
      "name":"keyword.other"
    },
    {
      "comment": "Definicion de Funciones",
      "match": "\\b(?i)(end function|end main|end report)\\b",
      "name":"storage.type"
    },
    {
      "comment": "Tipos de Almacenamiento",
      "match": "\\b(?i)(array|char|date|decimal|define|smallint|integer| float|let |like|record|(end)* record|(((^|\\s+)|(end\\s+))globals))\\b",
      "name":"storage.type.4GL"
    },
    {
      "comment": "Funciones Extras",
      "match": "(?i)((?<=\\s)(length|day|month|year|p_open|p_close)(?=\\s*\\(.*?\\)))",
      "name":"support.function.4GL"
    }
  ],
  "scopeName": "source.4GL"
}
