{
    "Select": {
        "prefix": "select",
        "body": [
            "SELECT ${1:campos}",
            "FROM ${2:tabla}",
            "WHERE ${3:condicion}"
        ],
        "description": "Select con where"
    },
    "update": {
        "prefix": "update",
        "body": [
            "UPDATE ${1:tabla}",
            "SET ${2:campos}",
            "WHERE ${3:condicion}"
        ],
        "description": "Update con Where"
    },
    "If": {
        "prefix": "if",
        "body": [
            "IF ${1:var1} = ${2:var2} THEN",
            "\t$0",
            "END IF"
        ],
        "description": "Condicional If"
    },
    "For": {
        "prefix": "for",
        "body": [
            "FOR i = ${1:1} TO ${2:cantidad}",
            "\t$0",
            "END FOR"
        ],
        "description": "Iteracion con For"
    },
    "Foreach": {
        "prefix": "foreach",
        "body":[
            "FOREACH ${1:cursor} INTO ${2:variable}",
            "\t$0",
            "END FOREACH"
        ],
        "description": "Iteracion con Foreach"
    },
    "Cursor For Select": {
        "prefix": "cursor",
        "body":[
            "DECLARE ${1:cursor} CURSOR FOR",
            "SELECT ${2:campos}",
            "FROM ${3:tabla}",
            "",
            "FOREACH ${1:cursor} INTO ${4:variable}",
            "\t$0",
            "END FOREACH"
        ],
        "description": "Cursor con Select y Foreach"
    },
    "Funcion": {
        "prefix": "function",
        "body":[
            "##############################################################################",
            "--              ${1:Nombre de la Funcion}",
            "--              ${2:Descripcion}",
            "--              ${3:Autor}",
            "--              ${4:Fecha}",
            "--              Parametros:",
            "--                      ${5:Parametros}",
            "--              Parametros:",
            "--                      ${6:Parametros}",
            "##############################################################################",
            "FUNCTION ${1:function_name}(${7:parameters})",
            "",
            "DEFINE",
            "   lc_fun     CHAR(30),",
            "   ll_kod     SMALLINT,",
            "   lc_error   CHAR(255)",
            "   ${8:more variables}",
            "",
            "    INITIALIZE",
            "        lc_fun, ll_kod, lc_error, ${9:inicializa variables}",
            "    TO NULL",
            "",
            "    ${10:code}",
            "",
            "    RETURN lc_fun",
            "END FUNCTION     ###     $1()"
        ],
        "description": "Nueva Funcion"
    },
    "Report": {
        "prefix": "report",
        "body": [
            "REPORT ${1:nombre}(${2:variables})",
            "",
            "DEFINE",
            "   ${3:var1}                  ${4:tipo},",
            "   ${5:var1}                  ${6:tipo},",
            "   ${7:var1}                  ${8:tipo}",
            "",
            "OUTPUT",
            "PAGE LENGTH ${9:length}",
            "",
            "FORMAT",
            "PAGE HEADER | FIRST PAGE HEADER",
            "PRINT \"=================================================================\"",
            "\"==========================================\"",
            "PRINT \"=================================================================\"",
            "\"==========================================\" ",
            "ON EVERY ROW",
            "\t$10",
            "ON LAST ROW",
            "\t$11",
            "END REPORT"
        ],
        "description":"Nuevo Reporte"
    },
    "Call": {
        "prefix": "call",
        "body": [
            "CALL ${1:funcion}(${2:variables})"
        ],
        "descripcion": "LLamar una Funcion"
    },
    "Message": {
        "prefix": "message",
        "body": [
            "MESSAGE \"${1:mensaje}\" ATTRIBUTE(BLINK,BOLD)"
        ],
        "description": "Mensaje"
    },
    "Case": {
        "prefix": "case",
        "body": [
            "CASE ${1:variable} ",
            "   WHEN ${2:value}",
            "       ${3:code}${4:",
            "   WHEN ${5:value}",
            "       ${6:code}}${7:",
            "   OTHERWISE",
            "       ${8:code}}",
            "END CASE"
        ],
        "description": "Case"
    },
    "Char": {
        "prefix": "char",
        "body":[
            "CHAR($1)$0"
        ],
        "description": "char"
    }
}